@font-face {
  font-family: "<%= fontName %>";
  src: local('<%= fontName %>'),
  url('<%= fontPath %><%= fontName %>.woff2?v=<%= date %>') format('woff2'),
  url('<%= fontPath %><%= fontName %>.woff?v=<%= date %>') format('woff'),
  url('<%= fontPath %><%= fontName %>.ttf?v=<%= date %>') format('truetype');
}

[class*="icon"] {
  font-family: "<%= fontName %>";
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-style: normal;
  font-variant: normal;
  font-weight: 400;
  text-decoration: none;
  text-transform: none;
  color: inherit;
  font-size: inherit;
  line-height: 1;
}

<% _.each(glyphs, function(glyph) { %>.<%= glyph.cssName %>:before {
  content: "\<%= glyph.codepoint.toString(16).toUpperCase() %>";
}

<% }); %>